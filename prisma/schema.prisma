generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Employee {
  id             String   @id @default(uuid())
  employeeNumber String
  lastName       String
  firstName      String
  gender         String
  dateOfBirth    DateTime
  age            Int
  contactNumber  String
  address        String
  dateHired      DateTime
  sss            String
  tin            String
  pagibig        String
  philhealth     String
  status         String  
}

